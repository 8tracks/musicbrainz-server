[%- PROCESS 'edit/details/macros.tt' -%]

<table class="details set-track-lengths">
  <tr>
    <th>[% l('Releases:') %]</th>
    <td colspan="2">
      <ul>
        [% FOR release=edit.display_data.releases %]
          <li>[% descriptive_link(release) %]
          </li>
        [% END %]
      </ul>
    </td>
  </tr>
  <tr>
    <th>[% l('Disc ID:') %]</th>
    <td colspan="2">[% link_cdtoc(edit.display_data.cdtoc) %]</td>
  </tr>

  [% old_lengths = BLOCK;
       FOR length=edit.data.length.old;
         length | format_length;
         ' ';
       END;
     END;
     new_lengths = BLOCK;
       FOR length=edit.data.length.new;
         length | format_length;
         ' ';
       END;
     END %]

  <tr>
    <th>[% label %]</th>
    <td class="old">[% Diff.diff_side(old_lengths, new_lengths, '-', '') %]</td>
    <td class="new">[% Diff.diff_side(old_lengths, new_lengths, '+', '') %]</td>
  </tr>

  [% IF old_lengths == new_lengths %]
  <tr>
    <th>[% l('Note:') %]</th>
    <td colspan="2">[% l('This edit makes subsecond changes to track lengths') %]</td>
  </tr>
  [% END %]
</table>
